<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:elevation="6dp"
    app:cardElevation="6dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <app.free.corona.virus.helper.customview.ScalableImageView
            android:id="@+id/imvCountry"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:text="country"
            android:lines="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:lines="1"/>


        <TextView
            android:id="@+id/tvTotalCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:text="Total"
            android:lines="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:lines="1"/>

        <TextView
            android:id="@+id/tvTodayCases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:text="Today"
            android:lines="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:lines="1"/>

        <TextView
            android:id="@+id/tvDeath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:text="Deaths"
            android:lines="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:lines="1"/>

        <TextView
            android:id="@+id/tvRecovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:text="Recovered"
            android:lines="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:lines="1"/>

        <TextView
            android:id="@+id/tvActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"
            android:textSize="10sp"
            android:lines="1"
            android:text="Active"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/header_color"></LinearLayout>
</LinearLayout>